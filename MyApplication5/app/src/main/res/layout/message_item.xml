<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:gravity="center">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_left"
        android:gravity="left"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView_profile_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/font1"
                android:id="@+id/textView_nick_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:text ="text"/>

            <TextView
                android:fontFamily="@font/font1"
                android:id="@+id/textView_content_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_below="@id/textView_nick_left"
                android:layout_marginTop="5dp"
                android:text ="text"/>

            <TextView
                android:fontFamily="@font/font1"
                android:id="@+id/textView_writetime_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text ="text"
                android:layout_toRightOf="@id/textView_content_left"
                android:layout_alignBottom="@id/textView_content_left"
                android:layout_marginLeft="5dp"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/imageViewleft"
            android:background="#888888"
            android:layout_weight="1"
            android:layout_margin="10dp" />


        <TextView
            android:fontFamily="@font/font1"
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text ="text"        />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/imageViewright"
            android:background="#888888"
            android:layout_weight="1"
            android:layout_margin="10dp" />

    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_right"
        android:gravity="right">



        <TextView
            android:fontFamily="@font/font1"
            android:id="@+id/textView_content_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text ="text"/>

        <TextView
            android:fontFamily="@font/font1"
            android:id="@+id/textView_writetime_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text ="text"
            android:textSize="15dp"
            android:layout_toLeftOf="@id/textView_content_right"
            android:layout_alignBottom="@id/textView_content_right"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>


</LinearLayout>
