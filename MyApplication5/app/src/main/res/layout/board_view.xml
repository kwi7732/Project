<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#79a209df">

                <ImageButton
                    android:id="@+id/button_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="?android:attr/actionModeCloseDrawable"/>

                <TextView
                    android:fontFamily="@font/font1"
                    android:id="@+id/textView_back"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text=""
                    android:layout_toRightOf="@id/button_back"
                    android:gravity = "center_vertical"
                    android:textSize="20dp"
                    android:layout_alignBottom="@id/button_back"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.9">

                    <TextView
                        android:fontFamily="@font/font1"
                        android:id="@+id/textView_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:fontFamily="@font/font1"
                            android:id="@+id/textView_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="fill_horizontal"
                            android:textSize="18dp"

                            />

                        <TextView
                            android:fontFamily="@font/font1"
                            android:id="@+id/textView_writetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            />


                    </LinearLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView_modify"
                    android:layout_width="30dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:fontFamily="@font/font1"
                    android:gravity="center"
                    android:src="@drawable/menu_2" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imageView_image_content"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"/>



            <TextView
                android:fontFamily="@font/font1"
                android:id="@+id/textView_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18dp"/>
        </LinearLayout>

    </ScrollView>


    <TextView
        android:fontFamily="@font/font1"
        android:id="@+id/button_show_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_weight="2"
        android:clickable="true"
        android:text="댓글보기"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>