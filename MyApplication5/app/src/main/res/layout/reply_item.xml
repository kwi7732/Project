<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:id="@+id/layout_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="?android:attr/actionModeCloseDrawable"/>

        <TextView
            android:fontFamily="@font/font1"
            android:id="@+id/textView_nick"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imageView_profile"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="장준영"
            android:textSize="15dp"/>



        <TextView
            android:fontFamily="@font/font1"
            android:id="@+id/textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imageView_profile"
            android:layout_below="@id/textView_nick"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:text="장준영"
            android:textSize="18dp"/>

        <TextView
            android:fontFamily="@font/font1"
            android:id="@+id/textView_writetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imageView_profile"
            android:layout_below="@id/textView_content"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:text="장준영"
            android:textSize="13dp"/>
    </RelativeLayout>

</RelativeLayout>